<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingStart="0dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
    >

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_pin"
        android:tint="@color/mediumDarkBlueGrey"
        android:visibility="visible"
        android:layout_marginTop="0dp"
        android:padding="16dp"
        />
    <ImageView
        android:id="@+id/imgIconSelectLocationInMap"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_gps_fixed"
        android:visibility="visible"
        android:layout_marginTop="0dp"
        android:padding="16dp"
        />

    <TextView
        android:id="@+id/primary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:text="@string/articulo"
        android:textColor="@color/black87"
        android:textSize="18dp"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon">
    </TextView>

    <TextView
        android:id="@+id/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/primary_text"
        android:layout_marginStart="4dp"
        android:text="Este es un texto de descripciÃ³n"
        android:textAlignment="textStart"
        android:textColor="@color/black60"
        android:textSize="14dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/imgIcon"
        android:gravity="start">
    </TextView>





</RelativeLayout>